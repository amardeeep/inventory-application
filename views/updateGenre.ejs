<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/body.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap"
      rel="stylesheet"
    />
    <title>Update Genre</title>
  </head>
  <body>
    <div class="main">
      <div class="headerNavFooterContent">
        <%- include('header') %>
        <div class="navFooterContent">
          <%- include('navbar') %>
          <div class="footerContent">
            <div class="content">
              <%- include("partials/errors.ejs") %>
              <form action="/updateGenre/<%=genre[0].genreid%>" method="post">
                <label for="genrename">Name :</label>
                <input
                  type="text"
                  name="genrename"
                  id="genrename"
                  value="<%=genre[0].genrename%>"
                />
                <label for="description">Description :</label>
                <input
                  type="text"
                  name="description"
                  id="description"
                  value="<%=genre[0].description%>"
                />
                <a href="/genres"><Button type="button">Back</Button></a>
                <button type="submit">Submit</button>
              </form>
            </div>
            <%- include('footer') %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
